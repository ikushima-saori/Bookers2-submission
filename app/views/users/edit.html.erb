<div class="ユーザーの編集">
  <h1>User info</h1>
  <%= form_with model: @user do |f| %>
  <div>
    <p><label for="inputName">Name</label></p>
    <p><%= f.text_field :name, autofocus: true, id:"inputName"%></p>
  </div>
  <div>
    <p><label>Image</label></p>
    <p><%= f.file_field :profile_image, accept: "image/*" %></p>
  </div>
  <div>
    <p><label for="inputIntroduction">Introduction</label></p>
    <p><%= f.text_field :introduction, id:"inputIntroduction"%></p>
  </div>
  <div>
    <%= f.submit "Update User" %>
  </div>
  <% end %>
</div>