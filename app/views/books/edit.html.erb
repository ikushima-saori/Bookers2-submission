<h1>books/edit　この行は後で消す</h1>
<div class=本の編集>
  <h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>
  <div>
    <label for="inputtitle">Title</label>
    <%= f.text_field :title, id:"inputtitle"%>
  </div>
  <div>
    <label>Opinion</label>
    <%= f.text_field :body%>
  </div>
  <div>
    <%= f.submit "Update Book" %>
  </div>
  <% end %>
</div>

<div class="遷移ボタン">
  <div class="詳細ボタン">
    <p><%= link_to "Show", book_path(@book.id) %></p>
  </div>
    |
  <div>
    <p><%= link_to "Back", books_path %></p>
  </div>
</div>