<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/186a26f36d.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %> <!--ログイン状態なら-->
        <div>
          <%= link_to "Bookers", root_path %>
        </div>
        <div>
          <%= link_to user_path(current_user.id) do %>
          <i class="fa-solid fa-house"></i> Home
          <% end %>
        </div>
        <div>
          <%= link_to users_path do %>
          <i class="fa-solid fa-users"></i> Users
          <% end %>
        </div>
        <div>
          <%= link_to books_path do %>
          <i class="fa-solid fa-book-open"></i> Books
          <% end %>
        </div>
        <div>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa-solid fa-right-from-bracket"></i> Log out
          <% end %>
        </div>
      <% else %> <!--ログアウト状態なら-->
        <div>
          <%= link_to "Bookers", root_path %>
        </div>
        <div>
          <%= link_to root_path do %>
          <i class="fa-solid fa-house"></i> Home
          <% end %>
        </div>
        <div>
          <%= link_to about_path do %>
          <i class="fa-solid fa-link"></i> About
          <% end %>
        </div>
        <div>
          <%= link_to new_user_registration_path do %>
          <i class="fa-solid fa-user-plus"></i> Sign up
          <% end %>
        </div>
        <div>
          <%= link_to new_user_session_path do %>
          <i class="fa-solid fa-right-to-bracket"></i> Log in
          <% end %>
        </div>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      CopyRight Infratop.inc
    </footer>
  </body>
</html>
