<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/186a26f36d.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %> <!--ログイン状態なら-->
        <div class="ロゴ">
          <%= link_to "Bookers", root_path %>
        </div>
        <nav class="ナビメニュー">
          <ul>
            <li class="homeボタン">
              <%= link_to user_path(current_user.id) do %>
              <i class="fa-solid fa-house"></i> Home
              <% end %>
            </li>
          </ul>
          <ul>
            <li class="usersボタン">
              <%= link_to users_path do %>
              <i class="fa-solid fa-users"></i> Users
              <% end %>
            </li>
          </ul>
          <ul>
            <li class="booksボタン">
              <%= link_to books_path do %>
              <i class="fa-solid fa-book-open"></i> Books
              <% end %>
            </li>
          </ul>
          <ul>
            <li class=ログアウトボタン>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa-solid fa-right-from-bracket"></i> Log out
              <% end %>
            </li>
          </ul>
        </nav>
      <% else %> <!--ログアウト状態なら-->
        <div class="ロゴ">
          <%= link_to "Bookers", root_path %>
        </div>
        <nav class="ナビメニュー">
          <ul>
            <li class="homeボタン">
              <%= link_to root_path do %>
              <i class="fa-solid fa-house"></i> Home
              <% end %>
            </li>
          </ul>
          <ul>
            <li class="aboutボタン">
              <%= link_to home_about_path do %>
              <i class="fa-solid fa-link"></i> About
              <% end %>
            </li>
          </ul>
          <ul>
            <li class="新規登録ボタン">
              <%= link_to new_user_registration_path do %>
              <i class="fa-solid fa-user-plus"></i> Sign up
              <% end %>
            </li>
          </ul>
          <ul>
            <li class="ログインボタン">
              <%= link_to new_user_session_path do %>
              <i class="fa-solid fa-right-to-bracket"></i> Log in
              <% end %>
            </li>
          </ul>
        </nav>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
